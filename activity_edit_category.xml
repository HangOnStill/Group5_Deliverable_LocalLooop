<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editCategoryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditCategoryActivity">

    <EditText
        android:id="@+id/editCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/edit_category_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editCategoryDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/edit_category_description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/updateCategoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_category"
        android:layout_marginTop="24dp" />

</LinearLayout>
