<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp"
        />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#222222"
        android:layout_gravity="center" />

    <!-- Shown only for Admins -->
    <Button
        android:id="@+id/refreshUsersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh_user_list"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/userListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:visibility="gone"/>

    <!-- For Organizers/Participants -->
    <TextView
        android:id="@+id/contentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/role_specific_content_will_appear_here"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>